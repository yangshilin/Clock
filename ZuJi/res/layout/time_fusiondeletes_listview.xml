<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/centeryuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/time_pastyuan" />

        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="2016" />

        <View
            android:id="@+id/timeline"
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/times"
            android:layout_below="@+id/times"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:background="#efefef" />

        <TextView
            android:id="@+id/mothday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeline"
            android:layout_marginLeft="50dp"
            android:text="02.10"
            android:textColor="#7A7A7A"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:background="#efefef"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            
            android:id="@+id/timeright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/centeryuan"
            android:background="@drawable/fusion_two" >
           

            <TextView
                android:id="@+id/timelife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="120dp"
                android:text="生命，是一个过程，可悲的是它不能重来，可喜的是它也不需要重来。"
                android:textColor="#7A7A7A" />

            <LinearLayout
                android:id="@+id/radioGroup "
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/timelife"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/timeshare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/shiguangzhou_share"
                    android:gravity="center"
                    android:text="分享"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timepaizhao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/shiguangzhou_takephoto"
                    android:gravity="center"
                    android:text="拍照"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timedelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/trash"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>