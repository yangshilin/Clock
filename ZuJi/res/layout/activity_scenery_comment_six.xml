<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/danhuise">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/deegreen" >

        <ImageButton
            android:id="@+id/scenery_comment_fanhuiBtn_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="20dp"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/scenery_comment_title_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/publicpraise_title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="vertical"
        android:background="@color/white" >

        <ListView
            android:id="@+id/scenery_comment_listview_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/danhuise"
            android:dividerHeight="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/danhuise"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/scenery_comment_edittext_six"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:background="@drawable/edit_text_background"
            android:hint="快来评论一番吧~"
            android:textColorHint="@color/deepgray"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/scenery_comment_xiaoxilan_zan_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/da_xin" />

        <ImageButton
            android:id="@+id/scenery_comment_xiaoxilan_zhuanfa_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/dynamic_share" />
    </LinearLayout>

</LinearLayout>