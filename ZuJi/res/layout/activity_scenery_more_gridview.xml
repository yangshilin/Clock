<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp" 
        android:orientation="vertical">

        <ImageView
            android:id="@+id/scenery_more_tupian"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:src="@drawable/teita"
            android:scaleType="centerCrop"/>
        
         <!-- android:scaleType="centerCrop"  图片居中放大 -->
         
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        >
        
	<RelativeLayout 
	    android:id="@+id/view"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
		android:layout_width="30dp"
	    android:layout_height="30dp">
	    
	    <ImageView 
	        android:id="@+id/scenery_more_touxiang"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:src="@drawable/touxiang"/>
	</RelativeLayout>
             
		<TextView
		    android:id="@+id/scenery_more_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="普通菇凉"
		    android:textSize="12sp"
		    android:textColor="@color/deepgray"
		    android:layout_alignTop="@id/view"
		    android:layout_toRightOf="@id/view"
		    android:layout_marginLeft="10dp"/>"
       
       
        <ImageView
				    android:id="@+id/scenery_more_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 	android:layout_marginLeft="15dp"
                    android:layout_alignBottom="@id/view"
		            android:layout_toRightOf="@id/view"
                    android:src="@drawable/shijian" />

                <TextView
                    android:id="@+id/scenery_more_fabu_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/scenery_more_clock"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/scenery_more_clock"
                    android:text="3-10"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/scenery_more_fabu_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/scenery_more_fabu_date"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/scenery_more_fabu_date"
                    android:text="10:15"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" />
                
                   <TextView
                    android:id="@+id/scenery_more_dianzan_shuju"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                	android:text="101"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" 
                    android:layout_marginRight="10dp"
                   android:layout_alignParentRight="true"
                   android:layout_alignBottom="@id/scenery_more_clock"/>
                
                
                  <ImageView 
                    android:id="@+id/scenery_more_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xin"
                    android:layout_marginRight="2dp"
                    android:layout_alignBottom="@id/scenery_more_dianzan_shuju"
                    android:layout_toLeftOf="@id/scenery_more_dianzan_shuju"/>
                  
                <TextView
                    android:id="@+id/scenery_more_pingyu_shuju"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                	android:text="21"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" 
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/scenery_more_dianzan"
                   android:layout_alignBottom="@id/scenery_more_dianzan"/>
                
                
                  <ImageView 
                    android:id="@+id/scenery_more_pingyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xiao_pinglun"
                    android:layout_marginRight="2dp"
                    android:layout_alignBottom="@id/scenery_more_pingyu_shuju"
                    android:layout_toLeftOf="@id/scenery_more_pingyu_shuju"/>
                
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

