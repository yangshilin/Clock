<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#2EB8C2" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="时光轴"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="2016年02月10日" />

        <ImageView
            android:id="@+id/pull_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cltime"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:src="@drawable/pull_down" />

        <Button
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/time_past"
            android:text="过去"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/shijian_ischeck_image" />

            <View
                android:id="@+id/centerview"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:background="#efefef" />

            <ImageView
                android:id="@+id/centeryuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/time_pastyuan" />

            <TextView
                android:id="@+id/times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:text="2016" />

            <View
                android:id="@+id/timeline"
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/times"
                android:layout_below="@+id/times"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="#efefef" />

            <TextView
                android:id="@+id/mothday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeline"
                android:layout_marginLeft="50dp"
                android:text="02.10"
                android:textColor="#7A7A7A"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/centerview"
                android:background="@drawable/fusion_two" >

                <TextView
                    android:id="@+id/timelife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="120dp"
                    android:text="生命，是一个过程，可悲的是它不能重来，可喜的是它也不需要重来。"
                    android:textColor="#7A7A7A" />

                <RadioGroup
                    android:id="@+id/timeRadioGroups "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timelife"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/timeshares"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/shiguangzhou_share"
                        android:gravity="center"
                        android:text="分享"
                        android:textColor="#9E9E9E" />

                    <RadioButton
                        android:id="@+id/timepaizhaos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/shiguangzhou_takephoto"
                        android:gravity="center"
                        android:text="拍照"
                        android:textColor="#9E9E9E" />

                    <RadioButton
                        android:id="@+id/timedeletes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/trash"
                        android:gravity="center"
                        android:text="删除"
                        android:textColor="#9E9E9E" />
                </RadioGroup>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>