<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danhuise"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/deegreen" >

        <ImageButton
            android:id="@+id/hot_yingji_fanhuiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="20dp"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/hot_yingji_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hot_yingji_title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		 android:orientation="vertical" >

        <ListView
            android:id="@+id/hot_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/danhuise"
            android:dividerHeight="10dp" />
    </LinearLayout>

</LinearLayout>