<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/deegreen" >

        <ImageButton
            android:id="@+id/scenery_comment_fanhuiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="20dp"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/scenery_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/publicpraise_title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/scenery_comment_fabutouxiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/focus_icon1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/scenery_comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/comment_name"
                android:textColor="@color/deepgray"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/clock_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:src="@drawable/shijian" />

                <TextView
                    android:id="@+id/scenery_comment_fabu_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/clock_icon"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/clock_icon"
                    android:text="3-10"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/scenery_comment_fabu_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/scenery_comment_fabu_date"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/scenery_comment_fabu_date"
                    android:text="13:50"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/scenery_comment_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/xin"
                    android:drawablePadding="3dp"
                    android:text="193"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/scenery_comment_pingyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/scenery_comment_dianzan"
                    android:drawableLeft="@drawable/xiao_pinglun"
                    android:drawablePadding="3dp"
                    android:text="10"
                    android:textColor="@color/deepgray"
                    android:textSize="8sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/scenery_comment_content_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="centerCrop"
        android:src="@drawable/erhai" />

    <!-- android:scaleType="centerCrop"  图片居中放大 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/scenery_comment_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/qianhuise"
            android:dividerHeight="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/danhuise"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/scenery_comment_edittext"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:background="@drawable/edit_text_background"
            android:hint="快来评论一番吧~"
            android:textColorHint="@color/deepgray"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/scenery_comment_xiaoxilan_zan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/da_xin" />

        <ImageButton
            android:id="@+id/scenery_comment_xiaoxilan_zhuanfa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/dynamic_share" />
    </LinearLayout>

</LinearLayout>