<?xml version="1.0" encoding="utf-8"?> 
<resources>
    <!-- Base底部    Theme主题    Light 照亮  -->
	<style name="AppBaseTheme" parent="android:Theme.Light"></style>
	
	<!-- <style name="myRadeoButton"> RadeoButton 布局调用名【@style/myRadioButton】 -->
	<style name="myRadioButton">
	    
	    <item name="android:layout_weight">1</item><!-- 【内部设置】 权重为1 -->
	    <item name="android:button">@null</item><!-- button为空，去掉按钮默认的元件 -->
	    <item name="android:drawablePadding">5dp</item><!-- Button距离父控件的 内边距离 -->
	    <item name="android:gravity">center</item> <!-- Button居中 -->
	</style>
    
	<style name="myView">
	    
	    <item name="android:layout_weight">2</item><!-- 【内部设置】 权重为2 -->
	   
	</style>
</resources>